<div class="table_body verifyCouples">
    <table>
        <thead>
            <tr>
                <th>Chosson</th>
                <th>Kallah</th>
                <!-- <th><i class="fa-solid fa-info"></i></th> -->
                <th>Info</th>
                <th>Status</th>
                <th>Edit</th>
            </tr>
        </thead>
        <tbody>
            <% coupleInfo.forEach(couple => { %>
            <tr>
                <td><%= couple.chossonName %></td>
                <td><%= couple.kallahName %></td>
                <td>
                    <p><i style="color: rgba(79, 89, 96, 0.537); font-size: 25px; cursor: pointer;" data-id="<%= couple._id %>" class="coupleInfo fa-solid fa-circle-info"></i></p>
                    <!-- <p class="status <% if(couple.announcement === false) { %> pending <% } else { %> view <% } %>"><% if(couple.announcement === false) { %> pending <% } else { %> view <% } %></p> -->
                </td>
                <td>
                    <p class="<% if (couple.collecting === false) { %> red <% } else { %> green <% } %>"><% if (couple.collecting === false) { %> unverified <% } else { %> verified <% } %></p>
                </td>
                <td><button type="button" class="button">
                    <span class="button__text"><% if (couple.collecting == false) { %> verify <% } else { %> unverify <% } %></span>
                    <span class="button__icon"><i class="fa-solid  <% if (couple.collecting === false) { %> fa-check <% } else { %> fa-xmark <% } %>"></i>
                    </span>
                </button></td>


                
                <!-- <div class="img-container"  id="announcements"></div> -->
            </tr>
            <% }) %>
            
        </tbody>
    </table>
</div>

